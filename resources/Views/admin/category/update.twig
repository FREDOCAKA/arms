{% extends 'template/main.twig' %}

{% block maincontent %}
<h5 class="text-primary"> New Category</h5>
<hr>

<form method="post" action="{{path_for('category.update',{id:category.id})}}">
    <div class="form-group">
        <label for="exampleInputtitle">Name </label>
        <input type="text" class="form-control text-capitalize {{ errors.name ? 'is-invalid':'' }}" name="name" id="exampleInputitle" 
        aria-describedby="emailHelp" placeholder="Enter category name" value="{{ category.name }}">
        {% if errors.name %}
            <div class="invalid-feedback">
            {{ errors.name | first }}
            </div>
        {% endif %}
    </div>

<input type="hidden" name="_METHOD" value="PUT">
{{ csrf.field | raw }}
<button type="submit" class="btn btn-primary">Update</button>

</form>
{% endblock %}