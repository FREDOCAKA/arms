{% extends 'template/app.twig' %}

{% block content %}


<div class="col-md-6 offset-md-2">

    <div class="authx">

    <h4 class="auth-title text-center text-primary">Login</h4>

        <form method="post" action="{{ path_for('auth.login') }}">

        <div class="form-group">
            <label for="exampleInputEmail1">Email </label>
            <input type="text" class="form-control {{ errors.email ? 'is-invalid':''}}" name="email" id="exampleInputEmail1" 
            aria-describedby="emailHelp" placeholder="Enter email" value="{{old.email}}">

            {% if errors.email %}
                <div class="invalid-feedback">
                    {{ errors.email | first}}
                </div>
             {% endif %}

        </div>
        <div class="form-group">
            <label for="InputPassword">Password</label>
            <input type="password" name="password" class="form-control {{ errors.password ? 'is-invalid':'' }}"
             id="InputPassword1" placeholder="Password">

               {% if errors.password %}
                <div class="invalid-feedback">
                    {{ errors.password | first}}
                </div>
             {% endif %}
        </div>

        
        <button type="submit" class="btn btn-primary">Login</button>

         {{ csrf.field | raw }}
        </form>

    </div>

</div>
{% endblock %}
